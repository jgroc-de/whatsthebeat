{
  "name": "com.jgroc.whatsthebeat",
  "displayName": "whatsthebeat",
  "version": "1.2.0",
  "description": "tiny pwa",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development",
    "start": "webpack serve --open 'firefox'",
    "build": "npx prettier . --write && webpack --mode production && cp -Ru public/*.* build/ && cp public/.htaccess build/ && npx tailwindcss -o public/build.css --minify",
    "css-watch": "npx tailwindcss -i ./src/input.css -o ./www/build.css --watch",
    "prettier": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgroc-de/whatsthebeat.git"
  },
  "author": "jgroc-de",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jgroc-de/whatsthebeat/issues"
  },
  "homepage": "https://github.com/jgroc-de/whatsthebeat#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "babel-loader": "^8.2.2",
    "cordova-android": "^12.0.1",
    "cordova-browser": "^7.0.0",
    "cordova-ios": "^7.1.0",
    "html-webpack-plugin": "^5.3.1",
    "tailwindcss": "^3.4.3",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^5.0.4"
  },
  "cordova": {
    "platforms": [
      "ios",
      "android",
      "browser"
    ]
  }
}
